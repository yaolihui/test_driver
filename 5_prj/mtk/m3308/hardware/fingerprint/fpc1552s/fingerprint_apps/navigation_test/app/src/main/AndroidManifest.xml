<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.fingerprints.navigationtest"
    android:versionCode="0230"
    android:versionName="2.30">

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="27" />

    <uses-permission android:name="com.fingerprints.extension.NAVIGATION" />
    <uses-permission android:name="com.fingerprints.extension.SENSE_TOUCH" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/fpc_icon"
        android:label="@string/app_name"
        android:logo="@drawable/fpc_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">

        <uses-library android:name="com.fingerprints.extension" />

        <!--Bug: activity android:label overwrites application android:label, even we specify
                 android:label in intent-filter. So remove activity android:label and setTitle()
                 from activity instead.-->
        <activity
            android:name=".DemoActivity"
            android:screenOrientation="behind">

            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TestModeActivity"
            android:screenOrientation="behind"
            android:label="@string/test" />

        <activity
            android:name=".LogActivity"
            android:screenOrientation="behind"
            android:label="@string/log" />

        <activity
            android:name=".Settings"
            android:screenOrientation="behind"
            android:label="@string/settings"
            android:windowSoftInputMode="adjustResize" />
    </application>
</manifest>
