<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/setupScrollView">

        <LinearLayout
            android:id="@+id/outerFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightGrey"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/setupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/testmodeSetupInfo"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/up" />

                        <EditText
                            android:id="@+id/numUpTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintUp"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/right" />

                        <EditText
                            android:id="@+id/numRightTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintRight"
                            android:inputType="number"
                            android:maxLength="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/down" />

                        <EditText
                            android:id="@+id/numDownTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintDown"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/left" />

                        <EditText
                            android:id="@+id/numLeftTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintLeft"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/click" />

                        <EditText
                            android:id="@+id/numClickTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintClick"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:src="@drawable/double_click" />

                        <EditText
                            android:id="@+id/numDoubleClickTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintDoubleClick"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/hold_click" />

                        <EditText
                            android:id="@+id/numHoldClickTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintHoldClick"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>
                    <!--
                                        <LinearLayout
                                            android:id="@+id/layoutSoftPress"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <ImageView
                                                android:layout_width="@dimen/test_mode_text_height"
                                                android:layout_height="@dimen/test_mode_text_height"
                                                android:padding="10dp"
                                                android:scaleType="fitXY"
                                                android:src="@drawable/soft_press" />

                                            <EditText
                                                android:id="@+id/numSoftPressTestsInputField"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/test_mode_text_height"
                                                android:hint="@string/testmodeHintSoftPress"
                                                android:inputType="number"
                                                android:maxLength="4" />
                                        </LinearLayout>
                    -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/test_mode_text_height"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/hard_press" />

                        <EditText
                            android:id="@+id/numHardPressTestsInputField"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/test_mode_text_height"
                            android:hint="@string/testmodeHintHardPress"
                            android:inputType="number"
                            android:maxLength="4" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:id="@+id/test_mode_buttons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/quickInputButton"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="@string/testmodeAdd1ToAll" />

                        <Button
                            android:id="@+id/clearButton"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="@string/testmodeClear" />
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/randomCheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/test_mode_buttons"
                        android:layout_below="@id/test_mode_buttons"
                        android:text="@string/testmodeRandomCheckbox" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:text="@string/testmodeStartButton"
                    android:visibility="visible" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/testFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#EEEEEE"
            android:clipToPadding="false"
            android:elevation="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeTotalInputs"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusTotalInputs"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"

                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeRemainingTests"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusTotalTestsRemaining"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeSuccessfulInputs"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusTotalSuccessfulInputs"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeFailedInputs"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusTotalFailedInputs"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeStatusRate"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/statusRate"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/testmodeTimeElapsed"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/timeDisplayer"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:text="@string/defaultValueZero"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/testImageDisplayer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:contentDescription="@string/testmodeImageDisplayerDesc"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/failedToRegisterInputButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="@string/testmodeFailedToRegInput"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/eventContainer"
                    android:layout_width="10dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/endTestButton"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/testmodeEndTest"
                    android:visibility="visible" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/scoreScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrey"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/scoreScreen_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:background="@color/white"
                android:text="@string/testmodeShowLog"
                android:visibility="visible" />

            <Button
                android:id="@+id/exitTestSummaryButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"

                android:background="@color/white"
                android:text="@string/testExitSummary"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/scoreScreen_bottom"
            android:clipToPadding="false"
            android:padding="5dp">

            <ExpandableListView
                android:id="@+id/mListView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/white"
                android:elevation="3dp"
                android:groupIndicator="@android:color/transparent"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightGrey"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:visibility="gone">

        <Button
            android:id="@+id/returnFromLogView"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:text="@string/testmodeReturn"
            android:visibility="visible" />

        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/returnFromLogView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:clipToPadding="false"
            android:elevation="3dp"
            android:maxLines="10000"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
